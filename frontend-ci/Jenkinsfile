pipeline {
    agent { label 'agent-ubuntu' }

    environment {
        DOCKERHUB_USER = "morlayecisse1196"
        REACT_IMAGE    = "${DOCKERHUB_USER}/react-frontend"
        REACT_TAG      = "1.${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout React Code ') {
            steps {
                echo "üì• R√©cup√©ration du code Frontend React....."
                checkout scm
            }
        }

        stage('Install Node Dependencies') {
            steps {
                echo "üì¶ Installation des paquets npm..."
                // On utilise  --frozen-lockfile ou simplement install
                sh "npm install"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo "üîç Analyse SonarQube du code React..."
                script {
                    def scannerHome = tool 'SonarScanner' 
                    
                    withSonarQubeEnv('SonarQube') {
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                              -Dsonar.projectKey=react-frontend-project \
                              -Dsonar.sources=src \
                              -Dsonar.host.url=http://13.38.54.58:9000
                        """
                    }
                }
            }
        }

        stage('Build React Production') {
            steps {
                echo "üèóÔ∏è Cr√©ation du build de production..."
                sh "npm run build"
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Construction de l'image Docker React..."
                sh "docker build -t ${REACT_IMAGE}:${REACT_TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                echo "üì§ Push vers DockerHub..."
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo "${DOCKER_PASS}" | docker login -u "${DOCKER_USER}" --password-stdin
                        docker tag ${REACT_IMAGE}:${REACT_TAG} ${REACT_IMAGE}:latest
                        docker push ${REACT_IMAGE}:${REACT_TAG}
                        docker push ${REACT_IMAGE}:latest
                        docker logout
                    """
                }
            }
        }

        
    }

    post {
        success {
            echo "‚úÖ D√©ploiement React r√©ussi !"
        }
        failure {
            echo "‚ùå √âchec du pipeline React"
        }
    }
}
