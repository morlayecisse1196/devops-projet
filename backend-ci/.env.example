# ==============================================
# Configuration Backend Django
# ==============================================

# Django Core
DEBUG=False
SECRET_KEY=django-insecure-change-this-to-a-very-long-random-string-min-50-chars
DJANGO_SETTINGS_MODULE=gestion_evenement_magal.settings

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://magal_user:changeme_password@db:5432/magal_db

# Ou configuration séparée:
# POSTGRES_DB=magal_db
# POSTGRES_USER=magal_user
# POSTGRES_PASSWORD=changeme_password
# POSTGRES_HOST=db
# POSTGRES_PORT=5432

# Superuser (optionnel - pour création automatique)
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=changeme_admin_password

# JWT Configuration (optionnel - override defaults)
# JWT_ACCESS_TOKEN_LIFETIME=3600  # en secondes (1 heure)
# JWT_REFRESH_TOKEN_LIFETIME=604800  # en secondes (7 jours)

# Static & Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# Email Configuration (optionnel)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Application Configuration
LANGUAGE_CODE=fr-fr
TIME_ZONE=Africa/Dakar

# Logging
LOG_LEVEL=INFO
